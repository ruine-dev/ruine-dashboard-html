---
import clsx from 'clsx';
import Label from './Label.astro';

const { label, name, id, className, ...props } = Astro.props;
---
<div class="flex items-center space-x-2">
  <input name={name} id={id || name} type="checkbox" class={clsx('inline-flex px-2 py-2 border border-gray-300 rounded outline-none appearance-none focus:ring-2 ring-primary-600 ring-offset-2 checked:bg-primary-600 checked:border-primary-600', className)} />
  <Label htmlFor={id || name}>{label}</Label>
</div>