---
import Avatar from './Avatar.astro';
import IconButton from './IconButton.astro';
import Input from './Input.astro';
---

<nav class="sticky top-0 z-10 w-full px-6 py-3 border-b border-gray-300 bg-white/80 backdrop-filter backdrop-blur-xl">
  <div class="flex items-center gap-x-4">
    <div class="flex items-center flex-1 gap-x-3">
      <IconButton>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 6h14M5 12h14M5 18h14"/></svg>
      </IconButton>
      <Input type="search" placeholder="Search" className="hidden sm:flex sm:w-full md:w-2/3 lg:w-1/2" leading={<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 21l-4.486-4.494M19 10.5a8.5 8.5 0 1 1-17 0 8.5 8.5 0 0 1 17 0z" /></svg>}/>
    </div>
    <div class="flex items-center ml-auto gap-x-3">
      <IconButton>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12.721 5.003L11.255 5c-3.344-.008-6.247 2.709-6.27 6v3.79c0 .79-.1 1.561-.531 2.218l-.287.438C3.73 18.11 4.2 19 4.985 19h14.03c.785 0 1.254-.89.818-1.554l-.287-.438c-.43-.657-.531-1.429-.531-2.219v-3.788c-.04-3.292-2.95-5.99-6.294-5.998z"/><path d="M15 19a3 3 0 1 1-6 0"/><path d="M12 2a2 2 0 0 1 2 2v1h-4V4a2 2 0 0 1 2-2z"/></svg>
      </IconButton>
      <button class="outline-none group">
        <Avatar src="https://randomuser.me/api/portraits/women/17.jpg" alt="Lisa Greyrat" />
      </button>
    </div>
  </div>
</nav>
