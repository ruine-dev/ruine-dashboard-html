---
import clsx from 'clsx';

const { href = '#' } = Astro.props;
const { pathname } = Astro.request.canonicalURL;
const isActive = href === (pathname.length > 1 ? pathname.slice(0, -1) : '/');
---

<li class="mt-1">
  <a
    href={href}
    class={clsx('block rounded-lg py-2 px-3 -ml-3 outline-none focus:ring-2 ring-primary-600', {
      'hover:bg-primary-50 hover:text-primary-600': !isActive,
      'bg-primary-100 text-primary-800': isActive,
    })}
  >
    <slot />
  </a>
</li>