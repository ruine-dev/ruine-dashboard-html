---
import clsx from 'clsx';

const { as = 'a', color = 'primary', className, ...props } = Astro.props;

const colors = {
  primary: 'text-primary-600 hover:text-primary-700',
  passive: 'text-gray-600 hover:text-gray-700',
};

const classes = clsx('font-semibold outline-none focus:ring-2 ring-primary-600 rounded', colors[color], className);
---
{as === 'button' ? (
  <button class={classes} {...props}>
    <slot />
  </button>
) : (
  <a class={classes} {...props}>
    <slot />
  </a>
)}
