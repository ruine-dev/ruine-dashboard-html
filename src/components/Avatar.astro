---
import clsx from 'clsx';
const { src, alt, shape = 'circle', className } = Astro.props;
---

<img src={src} alt={alt} class={clsx(
  'transition object-cover w-10 h-10 group-focus:ring-2 ring-primary-600 ring-offset-2',
  {
    'rounded-full': shape === 'circle',
    'rounded-lg': shape === 'square',
  },
  className)} />