---
import Navbar from '$components/Navbar.astro';
import Sidebar from '$components/Sidebar.astro';

const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {Boolean(title) ? <title>{title} - ruine UI</title> : <title>ruine UI Dashboard</title>}
    <link rel="stylesheet" href="{Astro.resolve('../styles/global.css')}" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossOrigin="anonymous" />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body x-data="sidebar" x-bind="body" class="text-sm antialiased lg:overflow-y-auto">
    <Sidebar />
    <div x-bind="sidebarSibling" class="flex flex-col flex-1 transition-all duration-300 lg:pl-64">
      <Navbar />
      <main class="p-6">
        {Boolean(title) && <h1 class="text-2xl font-bold text-gray-700">{title}</h1>}
        <div class="mt-6">
          <slot />
        </div>
      </main>
    </div>
    <script type="module" src="{Astro.resolve('../scripts/main.js')}"></script>
  </body>
</html>
