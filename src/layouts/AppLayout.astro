---
import BaseHead from '$components/BaseHead.astro';
import Navbar from '$components/Navbar.astro';
import Sidebar from '$components/Sidebar.astro';

const { title } = Astro.props;

const sidebarOptions = JSON.stringify({
  noScrollClass: 'overflow-y-hidden',
  noScrollBreakpoint: 1024,
}).replace(/\"/g, "'");
---
<html lang="en" class="lg:overflow-y-auto">
  <head>
    <BaseHead title={title}/>
  </head>
  <body x-data={`sidebar(${sidebarOptions})`} class="text-sm antialiased font-medium">
    <Sidebar />
    <div x-bind="sidebarSibling" class="flex flex-col flex-1 transition-all duration-300 lg:pl-64">
      <Navbar />
      <main class="p-6">
        {Boolean(title) && <h1 class="text-2xl font-bold text-gray-700">{title}</h1>}
        <div class="mt-6">
          <slot />
        </div>
      </main>
    </div>
    <script type="module" src="{Astro.resolve('../scripts/main.js')}"></script>
  </body>
</html>
